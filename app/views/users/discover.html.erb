
<h1> <%= @user.name %> Discover Movies </h1>

<%= button_to "Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: {}, local: true %><br>
<%= form_with url: "/users/#{@user.id}/movies", method: :get, params: {}, local: true do |f| %>
    <%= f.label :search  %>
    <%= f.text_field :search %>
    <%= f.submit "Search for movie: " %>
    <% end %>